<h1>Listing users</h1>

<table width="100%" style="table-layout: fixed; ">
    <col width="100px">
    <col width="170px">
    <col width="100px">
    <col width="100px">
    <col width="100px">
    <col width="100px">
    <col width="100px">
    <col width="100px">
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th>Country</th>
    <th>City</th>
    <th>State/Province</th>
    <th>Zip Code</th>       
    <th>Secret</th>
    <th></th>
    <th></th>
    <th></th>
