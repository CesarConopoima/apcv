	function cambiarcantidad(objeto) {
		var product_id = $(objeto).attr('id').split("agregaralcarro")[1];
		var cantidad = $("#cantidad" + product_id).val();
		var accion = $(objeto).parent().parent().attr('action');
		var accion_nueva = accion.split("quantity=")[0] + "quantity=" + cantidad;
		$(objeto).parent().parent().attr('action',accion_nueva);
	}
	
</script>

<h1><%= t('.title') %></h1>
 <% @detailProduct.each do |product| %>
	<div class="entry">
		<h3><%= product.name %></h3>
      	<img alt="" src="<%= image_path(product.imageurl) %>"/>
		<h4 class="price_line"><%= product.marc %></h4>
		<h4 class="price_line"><%= product.code %></h4>
		<div class="price_line">
			<% if user_signed_in? %>
			<div class="price"><%= number_to_currency(product.price, :unit=>"$") %></div>
			<div class="price">Disponible</div>	
			<div class="price">
			<form>
  			<input id="cantidad<%= product.id %>" type="number" name="quantity" value=1 style = "width:40px;">	
  			</form>
  			</div>
			<% else %>
			<div class="price">Disponible</div>	
			<% end %>
		</div>
		<% if user_signed_in? %>
		<div class="bottom"><%= button_to 'Add to cart', line_items_path(product_id: product, quantity: "1"), remote: true, :class => 'cartbutton',:id => "agregaralcarro#{product.id}", :onclick => "cambiarcantidad(this);" %></div>
		<% else %>
			<div class="bottom"><%= button_to 'Add to cart' %></div>
		<% end %>
	</div>
<% end %>