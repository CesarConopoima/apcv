<% if notice %>
<p id="notice"><i class="fa fa-check" style="color:#147939;"> <%= notice %></p>
<% elsif alert %>
<p id="alert"> <i class="fa fa-exclamation-triangle" style="color#990101;"></i> <%= alert %></p>
<% end %>
<h1 class ="head1">Please submit here your payment information</h1>
<h2 class ="head2">Your total bill is <span style ="color:#147939;font-size:1.24em;"><%= number_to_currency(@billing) %></span> </h2>
<%= render 'formpay' %>