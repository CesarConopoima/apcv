<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<h3>Your personal information</h3>
  <div><%= f.label :email %>
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :username %>
  <%= f.email_field :username %></div>

<h3>Contac information</h3>
  <div><%= f.label :company_name %>
  <%= f.email_field :companyname %></div>

  <div><%= f.label :telephone %>
  <%= f.email_field :telephone %></div>

  <div><%= f.label :fax %>
  <%= f.email_field :fax %></div>

<h3>Security information</h3>
  <div><%= f.label :password %>
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "Create Acount" %></div>
<% end %>

<%= render "devise/shared/links" %>
