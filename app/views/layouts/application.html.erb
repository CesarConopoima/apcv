<!DOCTYPE html>
<html>
<head>
  <title>Americanparts</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller.controller_name %>" id = "body">
<div id="contenido">
	<!--here goes logging and language info-->
		<div id="loginImg">
			Aquí img del Logo
		</div>
		<div id="loginLangua">
		<%= form_tag store_index_path, :method => 'get', :id => "productos_search" do %>
	    	<h2 class="searhTitle"><i class="fa fa-search"></i> &nbsp <%= t('.search') %></h2>
	    	<p>  
	    	<%= text_field_tag :search, params[:search], :class => "searchBar" %>  
	    	<%= submit_tag t('.searchsubmit'), :name => nil, :class => "searchBotton" %>  
	    	</p>  
	    <% end %> 
		</div>
		<!--here goes all login partial template-->
		<div id="loginLogin">
			<p>
			<span style ="padding-left:15px;">
			<% if user_signed_in? %>
			  <%= t('.text1') %> <strong> <%= current_user.email %> </strong>|
			  <%= link_to t('.linkLoggin'), destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
			<% else %>
			<%= link_to t('.linkCreate'), new_user_registration_path, :class => 'navbar-link'  %>
			<% end %>
			<span style ="float:right;padding-right:100px;">
			<%= link_to_unless I18n.locale == :en, "English", locale: :en %>&nbsp &nbsp
			<%= link_to_unless I18n.locale == :es, "Español", locale: :es %>
			</span>
			</p>
			<%= render 'devise/sessions/partialnew' %>
		</div>
	<!--here sup menu to add deployed menu-->
	<div id="navegacion">
		<%= render 'layouts/menu' %>
	</div>
	<!-- heres goes all main body of the web page -->
	<div id="side_l" style="color:white">
		xleft
	</div>
	<!--Aquí la parte cuerpo de la pag-->
	<div id="main">	
		<p class="notice"><%= notice %></p>
		<p class="alert"><%= alert %></p>
		<%= yield %>
	</div>
	<div id="side_r">
		<div id="cart">
			<%= render @cart %>
			<!--%= render 'carts/cart' %-->
		</div>
		<%= image_tag("compressors/Bitzer2.jpg",class: 'comp1')%>
		<%= image_tag("compressors/Carrier.jpg",class: 'comp1')%> <br>
		<%= image_tag("compressors/Copeland.jpg",class: 'comp1')%>
		<%= image_tag("compressors/Bitzer2.jpg",class: 'comp1')%>
	</div>
</div>
</body>
</html>
